<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<%- include('partials/_nav') %>

<main class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900">Schedule Configuration</h2>
      <p class="mt-2 text-gray-600">
        Manage and configure your competition schedule
      </p>
    </div>

    <!-- Configuration Options -->
    <div class="bg-white rounded-lg shadow mb-8">
      <div class="p-6">
        <h3 class="text-lg font-medium mb-6">Schedule Generation</h3>

        <div class="mb-8">
          <form action="/save-config" method="POST" class="mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
              <div>
                <label
                  for="numTeams"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Number of Teams</label
                >
                <input
                  type="number"
                  id="numTeams"
                  name="numTeams"
                  min="10"
                  max="50"
                  value="<%= typeof config !== 'undefined' ? config.numTeams : 32 %>"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  onchange="generateTeamNameInputs()"
                />
              </div>
              <div>
                <label
                  for="numTables"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Number of Robot Tables</label
                >
                <input
                  type="number"
                  id="numTables"
                  name="numTables"
                  min="2"
                  max="8"
                  value="<%= config?.numTables || 4 %>"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
              <div>
                <label
                  for="numJudgingRooms"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Number of Judging Rooms</label
                >
                <input
                  type="number"
                  id="numJudgingRooms"
                  name="numJudgingRooms"
                  min="4"
                  max="16"
                  value="<%= config?.numJudgingRooms || 8 %>"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
            </div>

            <!-- Team Names Section -->
            <div class="border-t border-gray-200 mt-8 pt-8">
              <h4 class="text-lg font-medium text-gray-900 mb-4">Team Names</h4>
              <p class="text-sm text-gray-600 mb-4">
                Select a team to customize its name.
              </p>

              <!-- Team Selection Dropdown -->
              <div class="mb-4">
                <label
                  for="teamSelector"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  Select Team
                </label>
                <select
                  id="teamSelector"
                  class="w-full md:w-1/3 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  onchange="showTeamNameEdit()"
                >
                  <option value="">Choose a team...</option>
                </select>
              </div>

              <!-- Team Name Edit Form -->
              <div
                id="teamNameEditForm"
                class="hidden bg-gray-50 p-6 rounded-lg mb-6"
              >
                <div class="max-w-md">
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    Edit Team Name
                  </label>
                  <div class="flex space-x-4">
                    <input
                      type="text"
                      id="teamNameInput"
                      class="flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Enter team name"
                    />
                    <button
                      type="button"
                      onclick="updateTeamName()"
                      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md"
                    >
                      Update
                    </button>
                  </div>
                </div>
              </div>

              <!-- Team Names List -->
              <div
                id="teamNamesList"
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
              >
                <!-- Team names will be displayed here -->
              </div>

              <!-- Hidden input to store team names -->
              <div id="teamNamesContainer"></div>
            </div>

            <div class="mt-8 flex justify-end space-x-4">
              <button
                type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-150 ease-in-out"
              >
                Save Configuration
              </button>
            </div>
          </form>
        </div>

        <!-- Current Schedule Information -->
        <div class="border-t border-gray-200 pt-6">
          <h4 class="font-medium text-gray-900 mb-4">
            Current Schedule Information
          </h4>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-gray-50 p-4 rounded">
              <p class="text-sm text-gray-500">Robot Game Tables</p>
              <p class="text-xl font-bold text-blue-600">
                <%= schedule.tableRuns.length %>
              </p>
            </div>
            <div class="bg-gray-50 p-4 rounded">
              <p class="text-sm text-gray-500">Judging Rooms</p>
              <p class="text-xl font-bold text-green-600">
                <%= schedule.judgingSchedule.length %>
              </p>
            </div>
            <div class="bg-gray-50 p-4 rounded">
              <p class="text-sm text-gray-500">Teams</p>
              <p class="text-xl font-bold text-purple-600">
                <%= schedule.teamsSchedule.length - 1 %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Future Configuration Options Placeholder -->
    <div class="bg-white rounded-lg shadow">
      <div class="p-6">
        <h3 class="text-lg font-medium mb-4">
          Additional Configuration Options
        </h3>
        <p class="text-gray-700">
          More configuration options will be available here in future updates.
        </p>
      </div>
    </div>
  </div>
</main>

<!-- Add this script before the footer -->
<script>
  let teamNames = <%- JSON.stringify(config?.teamNames || []) %>;
  const numTeams = <%= typeof config !== 'undefined' ? config.numTeams : 32 %>;

  function initializeTeamNames() {
    // Initialize team names array if empty
    if (!teamNames.length) {
      teamNames = Array(numTeams).fill().map((_, i) => `Team ${i + 1}`);
    }

    // Populate dropdown
    const selector = document.getElementById('teamSelector');
    selector.innerHTML = '<option value="">Choose a team...</option>';
    teamNames.forEach((name, index) => {
      selector.innerHTML += `<option value="${index}">Team ${index + 1}: ${name}</option>`;
    });

    // Update team names list display
    updateTeamNamesList();
    updateHiddenInputs();
  }

  function showTeamNameEdit() {
    const selector = document.getElementById('teamSelector');
    const form = document.getElementById('teamNameEditForm');
    const input = document.getElementById('teamNameInput');

    if (selector.value !== '') {
      const index = parseInt(selector.value);
      input.value = teamNames[index];
      form.classList.remove('hidden');
    } else {
      form.classList.add('hidden');
    }
  }

  function updateTeamName() {
    const selector = document.getElementById('teamSelector');
    const input = document.getElementById('teamNameInput');
    const index = parseInt(selector.value);

    if (input.value.trim()) {
      teamNames[index] = input.value.trim();
      updateTeamNamesList();
      updateHiddenInputs();

      // Update dropdown option
      const option = selector.options[index + 1];
      option.text = `Team ${index + 1}: ${teamNames[index]}`;

      // Hide the edit form
      document.getElementById('teamNameEditForm').classList.add('hidden');
      selector.value = '';
    }
  }

  function updateTeamNamesList() {
    const container = document.getElementById('teamNamesList');
    container.innerHTML = teamNames.map((name, index) => `
      <div class="bg-white p-4 rounded-lg shadow">
        <div class="text-sm text-gray-500">Team ${index + 1}</div>
        <div class="font-medium text-gray-900">${name}</div>
      </div>
    `).join('');
  }

  function updateHiddenInputs() {
    const container = document.getElementById('teamNamesContainer');
    container.innerHTML = teamNames.map((name, index) => `
      <input type="hidden" name="teamNames[]" value="${name}">
    `).join('');
  }

  // Initialize when page loads
  document.addEventListener('DOMContentLoaded', initializeTeamNames);

  // Update team names when number of teams changes
  document.getElementById('numTeams').addEventListener('change', function() {
    const newNumTeams = parseInt(this.value) || 32;

    // Adjust team names array
    if (newNumTeams > teamNames.length) {
      // Add new teams
      for (let i = teamNames.length; i < newNumTeams; i++) {
        teamNames.push(`Team ${i + 1}`);
      }
    } else if (newNumTeams < teamNames.length) {
      // Remove excess teams
      teamNames = teamNames.slice(0, newNumTeams);
    }

    initializeTeamNames();
  });
</script>

<%- include('partials/_schedule_scripts') %>
<!-- include footer -->
<%- include('include/_footer') %>
