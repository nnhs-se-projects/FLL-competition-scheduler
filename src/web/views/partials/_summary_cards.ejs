<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 summary-cards">
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">Robot Game Tables</h3>
    <p class="mt-2 text-3xl font-bold text-blue-600">
      <%= schedule.tableRuns.length %>
    </p>
    <p class="text-sm text-gray-500">Active Tables</p>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">Judging Rooms</h3>
    <p class="mt-2 text-3xl font-bold text-green-600">
      <%= schedule.judgingSchedule.length %>
    </p>
    <p class="text-sm text-gray-500">Active Rooms</p>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">Total Teams</h3>
    <p class="mt-2 text-3xl font-bold text-purple-600">
      <%= schedule.teamsSchedule.length - 1 %>
    </p>
    <p class="text-sm text-gray-500">Participating Teams</p>
  </div>
</div>
