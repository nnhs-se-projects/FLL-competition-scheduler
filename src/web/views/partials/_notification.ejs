<!-- Notification component for error/success messages -->
<% if (query && query.error) { %>
<div
  class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4"
  role="alert"
>
  <% if (query.error === 'unauthorized') { %>
  <strong class="font-bold">Access Denied!</strong>
  <span class="block sm:inline"
    >You don't have permission to access the configuration settings.</span
  >
  <% } else if (query.error === 'invalid_email') { %>
  <strong class="font-bold">Invalid Email!</strong>
  <span class="block sm:inline">Please provide a valid email address.</span>
  <% } else if (query.error === 'already_admin') { %>
  <strong class="font-bold">Already Admin!</strong>
  <span class="block sm:inline">This user is already an admin.</span>
  <% } else if (query.error === 'save_failed') { %>
  <strong class="font-bold">Save Failed!</strong>
  <span class="block sm:inline">Failed to save changes. Please try again.</span>
  <% } else { %>
  <strong class="font-bold">Error!</strong>
  <span class="block sm:inline">Something went wrong.</span>
  <% } %>
  <button
    class="absolute top-0 bottom-0 right-0 px-4 py-3"
    onclick="this.parentElement.style.display='none'"
  >
    <svg
      class="fill-current h-6 w-6 text-red-500"
      role="button"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
    >
      <title>Close</title>
      <path
        d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"
      />
    </svg>
  </button>
</div>
<% } %> <% if (query && query.success) { %>
<div
  class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4"
  role="alert"
>
  <% if (query.success === 'admin_added') { %>
  <strong class="font-bold">Success!</strong>
  <span class="block sm:inline">Admin user has been added successfully.</span>
  <% } else if (query.success === 'admin_removed') { %>
  <strong class="font-bold">Success!</strong>
  <span class="block sm:inline">Admin user has been removed successfully.</span>
  <% } else { %>
  <strong class="font-bold">Success!</strong>
  <span class="block sm:inline">Operation completed successfully.</span>
  <% } %>
  <button
    class="absolute top-0 bottom-0 right-0 px-4 py-3"
    onclick="this.parentElement.style.display='none'"
  >
    <svg
      class="fill-current h-6 w-6 text-green-500"
      role="button"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
    >
      <title>Close</title>
      <path
        d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"
      />
    </svg>
  </button>
</div>
<% } %>
