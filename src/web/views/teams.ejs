<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<%- include('partials/_nav') %>

<main class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Summary Cards -->
    <div class="no-print">
      <%- include('partials/_summary_cards') %>

      <!-- Print Button -->
      <div class="flex justify-end mb-4">
        <button
          onclick="printSchedule()"
          class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex items-center"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"
            />
          </svg>
          Print Schedule
        </button>
      </div>
    </div>

    <!-- Print Header -->
    <div class="hidden print:block mb-8">
      <h1 class="text-3xl font-bold text-center">FLL Competition Schedule</h1>
      <h2 class="text-xl font-medium text-center mt-2">Team Schedules</h2>
      <p class="text-center text-gray-600 mt-2">
        Generated: <%= new Date().toLocaleDateString() %>
      </p>
    </div>

    <!-- Teams Content -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% schedule.teamsSchedule.forEach((team, teamIndex) => { %> <% if
        (team.length > 0) { %>
        <div class="bg-gray-50 rounded-lg p-4 team-schedule">
          <h3 class="text-lg font-medium mb-4">
            <span
              class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded mr-2"
            >
              #<%= teamIndex %>
            </span>
            <%= team[0].teamName %>
          </h3>
          <%- include('partials/_team_schedule', { team }) %>
        </div>
        <% } %> <% }); %>
      </div>
    </div>
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>

<!-- Print Helper Script -->
<script src="/js/print-helper.js"></script>
