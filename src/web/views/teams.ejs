<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<%- include('partials/_nav') %>

<main class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Summary Cards -->
    <div class="no-print">
      <%- include('partials/_summary_cards') %>

      <!-- Export Button -->
      <div class="flex justify-end mb-4" id="exportBtnContainer">
        <!-- Export PDF button will be added here by JavaScript -->
      </div>
    </div>

    <!-- Print Header -->
    <div class="hidden print:block mb-8 print-header">
      <h1 class="text-3xl font-bold text-center">FLL Competition Schedule</h1>
      <h2 class="text-xl font-medium text-center mt-2">Team Schedules</h2>
      <p class="text-center text-gray-600 mt-2">
        Generated: <%= new Date().toLocaleDateString() %>
      </p>
      <p class="text-center text-gray-600 mt-1">
        Teams should arrive at their assigned locations 5 minutes before each
        scheduled event.
      </p>
      <div class="text-xs max-w-lg mx-auto mt-3 px-4">
        <p class="font-bold mb-1">Legend:</p>
        <div class="grid grid-cols-2 gap-2">
          <p>
            <span class="inline-block w-3 h-3 bg-blue-100 mr-1"></span> Robot
            Game: Be at your assigned table on time
          </p>
          <p>
            <span class="inline-block w-3 h-3 bg-purple-100 mr-1"></span> Robot
            Design: Bring your robot and engineering notebook
          </p>
          <p>
            <span class="inline-block w-3 h-3 bg-green-100 mr-1"></span> Project
            Judging: Bring any props and materials
          </p>
          <p>
            <span class="inline-block w-3 h-3 bg-amber-100 mr-1"></span> Lunch:
            Remember to stay hydrated!
          </p>
        </div>
      </div>
    </div>

    <!-- Teams Content -->
    <div class="bg-white rounded-lg shadow p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% schedule.teamsSchedule.forEach((team, teamIndex) => { %> <% if
        (team.length > 0) { %>
        <div class="bg-gray-50 rounded-lg p-4 team-schedule">
          <h3 class="text-lg font-medium mb-4">
            <span
              class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded mr-2"
            >
              #<%= teamIndex %>
            </span>
            <%= team[0].teamName %>
          </h3>
          <%- include('partials/_team_schedule', { team }) %>
        </div>
        <% } %> <% }); %>
      </div>
    </div>
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>

<!-- PDF Export Script -->
<script src="/js/export-pdf.js"></script>
